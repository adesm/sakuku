<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/icon_person"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icons8_user_black"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"/>
    <TextView
        android:id="@+id/person_list_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/icon_person"
        android:layout_toEndOf="@id/icon_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/icon_payment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icons8_receive_cash_black"
        android:layout_below="@id/icon_person"
        android:layout_marginRight="8dp"/>
    <TextView
        android:id="@+id/person_list_price"
        android:layout_below="@id/icon_person"
        android:layout_toRightOf="@id/icon_payment"
        android:layout_toEndOf="@id/icon_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/person_list_date"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>